---
import Layout from '../../layouts/Layout.astro';

const name = 'Other Page';
const [one, two] = [name.slice(0, name.length/2), name.slice(name.length/2, name.length)]
---

<Layout title={name}>
	<main>
		<section class="flex flex-col w-full items-center">
			<p class="text-[var(--my-danger)] font-bold text-6xl my-5"><span class="manita zoom">{one}</span> <span class="manita reflejo">{two}</span></p>
			<a class="text-blue-300 underline" href="/">to Home</a>
		</section>
	</main>
</Layout>
